<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Company</th>
      <th>Mileage Start</th>
      <th>Mileage End</th>
      <th>Pay</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% data.reverse().forEach(row => { %>
    <tr>
      <td><%= row.ID %></td>
      <td><%= new Date(row.date).toLocaleDateString() %></td>
      <td><%= row.company %></td>
      <td><%= row.mileage_start %></td>
      <td><%= row.mileage_end %></td>
      <td><%= row.pay %></td>
      <td>
        <button class="delete-btn" data-id="<%= row.ID %>" data-date="<%= new Date(row.date).toISOString().split('T')[0] %>" data-total-miles="<%= row.total_miles %>" data-pay="<%= row.pay %>">
          ğŸ—‘ï¸
        </button>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
